@{
    ViewData["Title"] = "LAL (Lund Action Levels)";
}

<h2>LAL (Lund Action Levels)</h2>

<p>
    This tool calculates the 10th, 50th, and 90th percentiles of specific joint angles/velocities
    from the currently loaded manikin.
</p>

<div class="mb-3">
    <label for="dtInput">Time step (s):</label>
    <input type="number" id="dtInput" value="0.1" step="0.01" min="0.01" class="form-control" style="width:120px;display:inline-block;" />
    <button id="calculateBtn" class="btn btn-primary">Calculate</button>
</div>

<table id="lalResults" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Metric</th>
            <th>10th percentile</th>
            <th>50th percentile</th>
            <th>90th percentile</th>
        </tr>
    </thead>
    <tbody>
        <!-- Rows will be filled dynamically -->
    </tbody>
</table>

@section Scripts {
    <script src="~/js/lal.js"></script>
}
